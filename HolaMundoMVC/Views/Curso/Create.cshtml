@* Indica que usaremos un modelo fuertemente tipado *@
@model Curso 

@{
    ViewData["Title"] = "Creacion de Curso";
}

<h1>@ViewData["Tittle"]  </h1>

<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre"/>
    </div>

    <div>
        <label asp-for="Dirección"></label>
        <input type="text" asp-for="Dirección"/>
    </div>
    
     <div>
        <label asp-for="Jornada"></label>
        <input type="text" asp-for="Jornada"/>
    </div>
    

    <input type="submit"/>
</form>

<p>@ViewBag.Fecha</p>